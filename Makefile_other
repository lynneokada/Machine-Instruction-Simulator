CODE_HOME = ${CURDIR}
BIN=$(CODE_HOME)/bin
OBJECTS=$(CODE_HOME)/Objects
SOURCES=$(CODE_HOME)/Sourcefile
HEADERS=$(CODE_HOME)/Headers
GCC= g++
DEBUG= -g
INCLUDES= -I $(CODE_HOME)/Headers
GCC_FLAGS= -std=c++14

# linking all object files into hello_world executable and store it in the bin directory
# Notice the three dependencies that correspond to the target of the three compile rules
$(BIN)/main: $(OBJECTS)/MISMain.o $(OBJECTS)/mis.o $(OBJECTS)/Variable.o \
	$(OBJECTS)/Math.o $(OBJECTS)/String.o $(OBJECTS)/Char.o $(OBJECTS)/Numeric.o \
	$(OBJECTS)/Real.o $(OBJECTS)/Jump.o 

	$(GCC) $(OBJECTS)/MISMain.o \
		$(OBJECTS)/mis.o \
		$(OBJECTS)/Variable.o \
		$(OBJECTS)/Math.o \
		$(OBJECTS)/String.o \
		$(OBJECTS)/Char.o \
		$(OBJECTS)/Numeric.o \
		$(OBJECTS)/Real.o \
		$(OBJECTS)/Jump.o \
		-o $(BIN)/main

# Cleaning by deleting all the object and the excutable files
clean:
	rm -rf $(BIN)/* $(OBJECTS)/*

# Compile the source hello_world_lib.cpp and place the resulting object file into the objects directory
$(OBJECTS)/MISMain.o: $(SOURCES)/MISMain.cpp
	$(GCC) $(DEBUG) $(GCC_FLAGS) $(INCLUDES) $(SOURCES)/MISMain.cpp \
										-o $(OBJECTS)/MISMain.o

# Compile the source hello_world_lib.cpp and place the resulting object file into the objects directory
$(OBJECTS)/mis.o: $(SOURCES)/mis.cpp
	$(GCC) $(DEBUG) $(GCC_FLAGS) $(INCLUDES) $(SOURCES)/mis.cpp \
										-o $(OBJECTS)/mis.o

# Compile the source hello_world_lib.cpp and place the resulting object file into the objects directory
$(OBJECTS)/Variable.o: $(SOURCES)/Variable.cpp
	$(GCC) $(DEBUG) $(GCC_FLAGS) $(INCLUDES) $(SOURCES)/Variable.cpp \
										-o $(OBJECTS)/Variable.o

# Compile the source hello_world_lib.cpp and place the resulting object file into the objects directory
$(OBJECTS)/Math.o: $(SOURCES)/Math.cpp
	$(GCC) $(DEBUG) $(GCC_FLAGS) $(INCLUDES) $(SOURCES)/Math.cpp \
										-o $(OBJECTS)/Math.o

# Compile the source hello_world_lib.cpp and place the resulting object file into the objects directory
$(OBJECTS)/String.o: $(SOURCES)/String.cpp
	$(GCC) $(DEBUG) $(GCC_FLAGS) $(INCLUDES) $(SOURCES)/String.cpp \
										-o $(OBJECTS)/String.o

# Compile the source hello_world_lib.cpp and place the resulting object file into the objects directory
$(OBJECTS)/Char.o: $(SOURCES)/Char.cpp
	$(GCC) $(DEBUG) $(GCC_FLAGS) $(INCLUDES) $(SOURCES)/Char.cpp \
										-o $(OBJECTS)/Char.o

# Compile the source hello_world_lib.cpp and place the resulting object file into the objects directory
$(OBJECTS)/Numeric.o: $(SOURCES)/Numeric.cpp
